#!/bin/sh
#
# Fuzzy Finder Dynamic GUI Menu
#
# Environment Variable: TERMINAL, FZF_DEFAULT_OPTS
#
# Dependencies: fzf & tail

# ╔═══════════════════════════════════════════════════════════════════════════════
# ║                               Config
# ╚═══════════════════════════════════════════════════════════════════════════════

export FZF_DEFAULT_OPTS="\
   --cycle
   --print-query
   --no-multi
   --reverse --border bottom --no-info --no-color --header '' --margin 0%,0%
   --bind \;:accept
   --bind esc:cancel
   --bind tab:down
   --bind btab:up
"

# ╔═══════════════════════════════════════════════════════════════════════════════
# ║                               Script
# ╚═══════════════════════════════════════════════════════════════════════════════

FILE_ARGS=/tmp/AMENU_FILE_ARGS
FILE_CHOICES=/tmp/AMENU_FILE_CHOICES

FLAG_CLASS=
FLAG_GEOMETRY=

scan_args() {
    while IFS= read -r line; do echo "$line"; done
    [ -n "$line" ] && echo "$line"
}

show() { while IFS= read -r line; do echo "$line"; done <$FILE_CHOICES; }

run_menu() {
    scan_args >$FILE_ARGS
    prompt
    show
}

run_app() {
    while IFS= read -r program; do
        $program >/dev/null 2>&1 &
    done <$FILE_CHOICES
}

prompt() {
    : >$FILE_CHOICES
    $TERMINAL $FLAG_CLASS amenu $FLAG_GEOMETRY $GEOMETRY $FLAG_CMD \
        "$SHELL" -c \
        "fzf $PROMPT $QUERY < $FILE_ARGS | tail -1 > $FILE_CHOICES" 2>/dev/null
    [ -s "$FILE_CHOICES" ] || exit 1
}

scan_apps() {
    for program in /usr/bin/* /usr/local/bin/*; do
        echo "${program##*/}"
    done >$FILE_ARGS
}

run_launcher() {
    scan_apps
    prompt
    run_app
}

init() {
    GEOMETRY=$WIDTH"x"$HEIGHT+$OFFSET_X+$OFFSET_Y
    case $TERMINAL in
    st)
        FLAG_CLASS=-c
        FLAG_GEOMETRY=-g
        ;;
    xterm)
        FLAG_CLASS=-class
        FLAG_GEOMETRY=-geometry
        ;;
    termite)
        FLAG_CLASS=--class
        ;;
    alacritty)
        FLAG_CMD=-e
        FLAG_CLASS=--class
        FLAG_GEOMETRY=
        GEOMETRY="-o window.padding.x=15 -o window.padding.y=15 -o window.dimensions.columns=0"
        ;;
    foot)
        FLAG_CLASS=-a
        FLAG_GEOMETRY=
        GEOMETRY=
        ;;
    esac
}

main() {
    init
    while :; do
        case $1 in
        -l) RUN_LAUNCHER="true" ;;
        -p) shift && PROMPT=" --header \"$1\"" ;;
        -q) shift && QUERY=" -q \"$1\"" ;;
        *) break ;;
        esac
        shift
    done
    if [ -n "$RUN_LAUNCHER" ]; then
        run_launcher
    else
        run_menu
    fi
}

main "$@"
